

<div id="section">

  <%= form_for :pregunta, :url => { :action => :update}, :method => :put do |f| %>
    <% if @pregunta.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@pregunta.errors.count, "error") %> prohibited this question from being saved:</h2>
        <ul>
        <% @pregunta.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label "Suba la imagen" %><br>
      <%= f.file_field :image %>
    </div>

    <div class="field">
      <%= f.label :texto %><br>
      <%= f.text_area :texto %>
    </div>
    <div class="field">
      <%= f.label :respuesta1 %><br>
      <%= f.text_field :respuesta1 %>
    </div>
    <div class="field">
      <%= f.label :respuesta2 %><br>
      <%= f.text_field :respuesta2 %>
    </div>
    <div class="field">
      <%= f.label :respuesta3 %><br>
      <%= f.text_field :respuesta3 %>
    </div>
    <div class="field">
      <%= f.label :respuesta4 %><br>
      <%= f.text_field :respuesta4 %>
    </div>
    <div class="field">
      <%= f.label :tiempo %><br>
      <%= f.number_field :tiempo %>
    </div>
    <div class="actions">
      <%= f.submit "Guardar Pregunta" %>
    </div>
  <% end %>

<%= link_to 'Quizzes', admin_quizzs_path %>
</div>
<script>
var acc = document.getElementsByClassName("accordion");
var i;

for (i = 0; i < acc.length; i++) {
    acc[i].onclick = function(){
        this.classList.toggle("active");
        this.nextElementSibling.classList.toggle("show");
    }
}
</script>
