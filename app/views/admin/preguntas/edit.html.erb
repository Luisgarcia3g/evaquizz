<style>
.button {
    background-color: #5999CB; /* Green */

    color: #F9F9F9;

    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
}

#header {

    background-color:#5999CB;
    color:white;
    text-align:left;
    padding:5px;
    height: 100%;
  width: : 100%;
}
#nav {
    line-height:30px;
    background-color:#F9F9F9;
    height:450px;
    width:150px;
    float:left;
    padding:5px;
}
#section {
    width:350px;
    float:left;
    padding:10px;
  }
    /* Style the buttons that are used to open and close the accordion panel */
    button.accordion {
        background-color: #F9F9F9;
        color: #5999CB;
        cursor: pointer;
        padding: 18px;
        width: 100%;
        text-align: left;
        border: none;
        outline: none;
        transition: 0.4s;
    }

    /* Add a background color to the button if it is clicked on (add the .active class with JS), and when you move the mouse over it (hover) */
    button.accordion.active, button.accordion:hover {
        background-color: #9CC2E0;
    }

    /* Style the accordion panel. Note: hidden by default */
    div.panel {
        padding: 0 18px;
        background-color: white;
        display: none;
    }

    /* The "show" class is added to the accordion panel when the user clicks on one of the buttons. This will show the panel content */
    div.panel.show {
        display: block ;
    }

    th {
        text-align: center;
        vertical-align: center;
        background-color: #5999CB;
        color: #F9F9F9;
    }
    td {
        text-align: center;
        vertical-align: center;
    }
    .logo{


    }

tr:hover {background-color: #F9F9F9}
</style>
<p id="notice"><%= notice %></p>

<div id="header">

<h1>Editar Pregunta</h1>
</div>

<div id="nav">
  <button class="accordion">Preguntas</button>
  <div class="panel">
    <%= link_to "Ver preguntas", controller: "preguntas", action: "index" %>
      <%= link_to "Crear pregunta", controller: "preguntas", action: "new" %>
  </div>

  <button class="accordion">Quizzes</button>
  <div class="panel">
    <%= link_to "Ver Quizzes", controller: "quizzs", action: "index" %>
      <%= link_to "Crear quizz", controller: "quizzs", action: "new" %>
  </div>

  <button class="accordion">Tema</button>
  <div class="panel">
  <%= link_to "Ver temas", controller: "temas", action: "index" %>
    <%= link_to "Crear tema", controller: "temas", action: "new" %>
  </div>
  <button class="accordion">Temario</button>
  <div class="panel">
    <%= link_to "Ver temarios", controller: "temarios", action: "index" %>
      <%= link_to "Crear temario", controller: "temarios", action: "new" %>
  </div>

</div>

<div id="section">

  <%= form_for :pregunta, :url => { :action => :update}, :method => :put do |f| %>
    <% if @pregunta.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@pregunta.errors.count, "error") %> prohibited this question from being saved:</h2>
        <ul>
        <% @pregunta.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label "Suba la imagen" %><br>
      <%= f.file_field :image %>
    </div>

    <div class="field">
      <%= f.label :texto %><br>
      <%= f.text_area :texto %>
    </div>
    <div class="field">
      <%= f.label :respuesta1 %><br>
      <%= f.text_field :respuesta1 %>
    </div>
    <div class="field">
      <%= f.label :respuesta2 %><br>
      <%= f.text_field :respuesta2 %>
    </div>
    <div class="field">
      <%= f.label :respuesta3 %><br>
      <%= f.text_field :respuesta3 %>
    </div>
    <div class="field">
      <%= f.label :respuesta4 %><br>
      <%= f.text_field :respuesta4 %>
    </div>
    <div class="field">
      <%= f.label :tiempo %><br>
      <%= f.number_field :tiempo %>
    </div>
    <div class="actions">
      <%= f.submit "Guardar Pregunta" %>
    </div>
  <% end %>

<%= link_to 'Quizzes', admin_quizzs_path %>
</div>
<script>
var acc = document.getElementsByClassName("accordion");
var i;

for (i = 0; i < acc.length; i++) {
    acc[i].onclick = function(){
        this.classList.toggle("active");
        this.nextElementSibling.classList.toggle("show");
    }
}
</script>
