<style>
.button {
    background-color: #5999CB; /* Green */

    color: #F9F9F9;

    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
}

#header {

    background-color:#5999CB;
    color:white;
    text-align:left;
    padding:5px;
    height: 100%;
  width: : 100%;
}
#nav {
    line-height:30px;
    background-color:#F9F9F9;
    height:450px;
    width:150px;
    float:left;
    padding:5px;
}
#section {
    width:650px;
    float:left;
    padding:10px;
  }
    /* Style the buttons that are used to open and close the accordion panel */
    button.accordion {
        background-color: #F9F9F9;
        color: #5999CB;
        cursor: pointer;
        padding: 18px;
        width: 100%;
        text-align: left;
        border: none;
        outline: none;
        transition: 0.4s;
    }

    /* Add a background color to the button if it is clicked on (add the .active class with JS), and when you move the mouse over it (hover) */
    button.accordion.active, button.accordion:hover {
        background-color: #9CC2E0;
    }

    /* Style the accordion panel. Note: hidden by default */
    div.panel {
        padding: 0 18px;
        background-color: white;
        display: none;
    }

    /* The "show" class is added to the accordion panel when the user clicks on one of the buttons. This will show the panel content */
    div.panel.show {
        display: block ;
    }

    th {
        text-align: center;
        vertical-align: center;
        background-color: #5999CB;
        color: #F9F9F9;
    }
    td {
        text-align: center;
        vertical-align: center;
    }
    .logo{


    }

tr:hover {background-color: #F9F9F9}
</style>
<div id="header">

<h1>Gestión de Quizzes</h1>
</div>
<div id="nav">
  <button class="accordion">Preguntas</button>
  <div class="panel">
    <%= link_to "Ver preguntas", controller: "preguntas", action: "index" %>
      <%= link_to "Crear pregunta", controller: "preguntas", action: "new" %>
  </div>

  <button class="accordion">Quizzes</button>
  <div class="panel">
    <%= link_to "Ver Quizzes", controller: "quizzs", action: "index" %>
      <%= link_to "Crear quizz", controller: "quizzs", action: "new" %>
  </div>

  <button class="accordion">Tema</button>
  <div class="panel">
  <%= link_to "Ver temas", controller: "temas", action: "index" %>
    <%= link_to "Crear tema", controller: "temas", action: "new" %>
  </div>
  <button class="accordion">Temario</button>
  <div class="panel">
    <%= link_to "Ver temarios", controller: "temarios", action: "index" %>
      <%= link_to "Crear temario", controller: "temarios", action: "new" %>
  </div>

</div>

<p id="notice"><%= notice %></p>


<div id="section">

  <%= link_to "<button class='button'>Nuevo Quizz</button>".html_safe, "quizz/nuevo/" %>
  <br>
  <br>

<table border="1">
  <col width="270">
  <col width="160">
  <col width="170">
  <col width="170">
    <col width="170">
  <thead>
    <tr>
      <th>Nombre del quizz</th>
        <th>Disponibile</th>
          <th>Tema</th>
            <th>Ver</th>
              <th>Editar</th>


      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @quizzes.each do |q| %>
      <tr>
        <td><%= q.nombre %></td>
          <% if q.disponible? %>
<td> Sí</td>
            <% else %>
<td> No </td>
              <% end %>

              <% @temas.each do |t| %>


                    <% if (t.id==q.temaid) %>
            <td><%= t.nombretema %></td>

  <% end %>
                        <% end %>
                          <td><%= link_to 'Ver', controller: "quizzs", action: "show", id: q.id  %></td>
  <td><%= link_to 'Editar', edit_admin_quizz_path(q) %></td>


    <% end %>
  </tbody>
</table>
  <%= will_paginate @quizzes,  :previous_label => 'Atrás', :next_label => 'Adelante'%>
<br>

</div>

<script>
var acc = document.getElementsByClassName("accordion");
var i;

for (i = 0; i < acc.length; i++) {
    acc[i].onclick = function(){
        this.classList.toggle("active");
        this.nextElementSibling.classList.toggle("show");
    }
}
</script>
