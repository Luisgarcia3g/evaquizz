<% end %>
<td><%=q.nombre%></td>
<td><%=temas.nombretema%></td>
<% if gp.iniciado? %>
<td><%= localize(gp.updated_at, :format => :long) %></td>
<td>

  <%=link_to image_tag("grafic.png", border: 0), {action: 'gestion', controller: 'dashboard', codigo:gp.codigo_id, quizz: gp.quizz_id}, {class: 'dock-item'}%>

</td>
<%@resultados=Resultado.where(Codigo: gp.codigo_id) %>
<%preguntas= @resultados.count%>
<%@resultados=Resultado.where(Codigo: gp.codigo_id, respuesta: 1) %>
<%aciertos= @resultados.count%>

<%aprobacion=((aciertos*1.0)/preguntas)*100 %>

<%if aprobacion>=90%>
<td><font color="green" ><%=aprobacion%>%  </font></td>
<%elsif aprobacion >=70%>
<td><font color="orange" ><%=aprobacion%>%</font></td>
<%else%>
<td><font color="red"><%=aprobacion%>% </font></td>



<%end%>
<% else %>
<td></td>
<td></td>
<td></td>
<% end %>

  <td><%= link_to 'Ver', controller: "dashboard", action: "verquizz", id: q.id  %></td>
