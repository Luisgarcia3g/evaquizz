  <tr>
<%@temario.each do |trio| %>

<% if (trio.id==@grupo.temarioid) %>
<%  @temas=Tema.where(temarioid: trio.id)%>

<%@temas.each do |temas| %>
<%  @quizz=Quizz.where(temaid: temas.id)%>

<%@quizz.each do |q| %>

<%@grupoquizz=Grupoquizzs.where(quizz_id: q.id)%>
<% @grupoquizz.each do |gp| %>

<% if gp.iniciado? %>
<td>Terminado</td>

<% else %>
